---
import '../app.css'

const {
    title: string,
} = Astro.props

const links = new Array(100).fill(null).map((_, i) => i + 1)
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<t rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />

		<title>{Astro.props.title}</title>
	</head>
	<body>
        <div class="flex">
            <nav class="bg-slate-800 text-gray-100 w-56 h-screen overflow-y-scroll">
                <h3 class="text-xl p-4 font-bold text-gray-50">Daily UI</h3>
                <ul>
                    {
                        links.map((link) => (
                            <li class="">
                                <a href={link.toString()} class="inline-block w-full h-full px-4 py-2 hover:bg-slate-600 hover:underline">Day {link}</a>
                            </li>
                        ))
                    }
                </ul>
            </nav>
            <main class="col-span-3 w-full">
                <slot />
            </main>
        </div>
	</body>
</html>